{
  "settings": {
    "index": {
      "number_of_replicas": 0,
      //      "index.merge.scheduler.max_thread_count": 1,  // remove if storage on SSD!
      "refresh_interval": -1,
      //      "memory.index_buffer_size": "20%",    // increase the buffer size (not sure it helps actually)
//      "threadpool.bulk.queue_size": 5000 // should be at least batch size * nb shards
      "codec": "best_compression"
    },
    "analysis": {
      "filter": {
        "my_stop": {
          "type": "stop",
          "stopwords": "_english_"

        }
      },
      "analyzer": {
        "case_insensitive_keyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": "lowercase"
        },
        "case_insensitive_folding_keyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "case_insensitive_folding_text": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "case_insensitive_folding_text_stopwords": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "my_stop"
          ]
        }
      }
    }
  }
}